# top-most EditorConfig file
root = true

# Set default charset
[*]
charset = utf-8

# Indentation override for js
[**.js]
indent_style = space
indent_size = 4

[public/javascript/**.js]
indent_style = space
indent_size = 2

[**.json]
indent_style = space
indent_size = 2

# Indentation override for css
[**.css]
indent_style = space
indent_size = 2

# Indentation override for jade
[**.jade]
indent_style = space
indent_size = 2